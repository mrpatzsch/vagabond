<% if current_user %>
<%= form_for [@user, @tip]  do |f| %>
  <%= f.label "title" %>
  <%= f.text_field :title, class: "form-control" %><br>
  <%= f.label "content" %><br>
  <%= f.text_area :content, class: "form-control", style: "height: 200px" %>
  <%= f.submit :submit %>
<% end %>
<% else %>
  <h1>Please Login</h1>
<% end %>

